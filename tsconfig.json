{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "CommonJS",                     
    "declaration": true,                      
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                   
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,                        
    "resolveJsonModule": true,               
    "moduleResolution": "node",                
    "lib": ["ES6", "DOM"],                    
    "noImplicitAny": true                      
  },
  "include": ["src"],                        
  "exclude": ["node_modules", "**/*.spec.ts"]
}